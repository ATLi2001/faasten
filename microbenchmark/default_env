export RUNTIMES=(python3 nodejs java go)

export MEMROOT=/tmp/snapfaas
export MEMSNAPSHOTDIR=$MEMROOT/snapshots
export MEMROOTFSDIR=$MEMROOT/rootfs
export MEMAPPFSDIR=$MEMROOT/appfs

export NVMROOT=/nvm
export NVMSNAPSHOTDIR=$NVMROOT/snapshots
export NVMROOTFSDIR=$NVMROOT/rootfs
export NVMAPPFSDIR=$NVMROOT/appfs

export SSDROOT=/ssd
export SSDSNAPSHOTDIR=$SSDROOT/snapshots
export SSDROOTFSDIR=$SSDROOT/rootfs
export SSDAPPFSDIR=$SSDROOT/appfs
export SSDEXECSNAPSHOTDIR=$SSDROOT/exec-snapshot

export HDDROOT=/hdd
export HDDSNAPSHOTDIR=$HDDROOT/snapshots
export HDDROOTFSDIR=$HDDROOT/rootfs
export HDDAPPFSDIR=$HDDROOT/appfs

export KERNEL=$MEMROOT/kernel/vmlinux-4.20.0
export NETDEV=tap0/aa:bb:cc:dd:ff:00

export MEMBINDIR=$MEMROOT/release
